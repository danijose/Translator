<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/content/Site.css" />

</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li><a asp-controller="Home" asp-action="Index"> Home</a></li>
                    <li><a asp-controller="Platform" asp-action="Index"> Platform</a></li>
                    <li><a> Translation</a></li>

                    <li id="settings" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Settings<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li id="language"><a asp-controller="Platform" asp-action="Index"> Language</a></li>
                            <li id="platform"><a asp-controller="Home" asp-action="Index"> platform</a></li>
                            <li id="filegroup"><a asp-controller="Home" asp-action="Index"> FileGroup</a></li>
                            <li id="inapp"><a asp-controller="Home" asp-action="Index"> InApp</a></li>
                            <li class="divider"></li>
                            <li id="windows"><a asp-controller="Home" asp-action="Index"> Download for Windows</a></li>
                            <li id="android"><a asp-controller="Home" asp-action="Index"> Download for Android</a></li>
                            <li id="ios"><a asp-controller="Home" asp-action="Index"> Download for iOS</a></li>
                        </ul>
                    </li>

                    <li><button type="submit" class="btn btn-warning navbar-btn">Windows</button></li>
                    <li><button type="submit" class="btn btn-warning navbar-btn">Android</button></li>
                    <li><button type="submit" class="btn btn-warning navbar-btn">iOS</button></li>

                    <li>
                        <form class="navbar-form" role="search">
                            <div class="input-group search-box">
                                <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a>Register</a></li>
                    <li><a>Log in</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        <div class="row">
            @RenderBody()
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/js/tab.js" type="text/javascript"></script>
</body>
</html>
