<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin Dashboard</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/content/css/Admin.css" />
</head>

<body>

    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">iVedix</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                    <li><a asp-controller="Admin" asp-action="Index">Translate</a></li>
                    <li><a asp-controller="Admin" asp-action="Index">Values</a></li>
                    <li><a asp-controller="Admin" asp-action="Index">Keys</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a asp-controller="Admin" asp-action="Index">Welcome, Daniya</a></li>
                    <li><a asp-controller="Admin" asp-action="Index">Logout</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard <small> Admin Dashboard</small></h1>
                </div>
                <div class="col-md-2">
                    <div class="dropdown settings">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Settings
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li id="language"><a asp-controller="Platform" asp-action="Index"> Language</a></li>
                            <li id="platform"><a asp-controller="Home" asp-action="Index"> platform</a></li>
                            <li id="filegroup"><a asp-controller="Home" asp-action="Index"> FileGroup</a></li>
                            <li id="inapp"><a asp-controller="Home" asp-action="Index"> InApp</a></li>
                            <li class="divider"></li>
                            <li id="windows"><a asp-controller="Home" asp-action="Index"> Download for Windows</a></li>
                            <li id="android"><a asp-controller="Home" asp-action="Index"> Download for Android</a></li>
                            <li id="ios"><a asp-controller="Home" asp-action="Index"> Download for iOS</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                <li class="active">Dashboard</li>
            </ol>
        </div>
    </section>
    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="list-group">
                        <a href="#" class="list-group-item active main-color-bg">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>Dashboard
                        </a>
                        <a href="#" class="list-group-item"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>Platform</a>
                        <a href="#" class="list-group-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Language</a>
                        <a href="#" class="list-group-item"><span class="glyphicon glyphicon-file" aria-hidden="true"></span>FileGroup</a>
                    </div>
                </div>
                <div class="col-md-9">

                </div>
            </div>
        </div>
    </section>


    <div class="container body-content">
        <div class="row">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
</body>
</html>
